<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Mis citas · <%= org.name %></title>
  <style>
    *,*::before,*::after{box-sizing:border-box}
    body{margin:0;background:#fff;color:#111827;font:16px/1.5 system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif}
    .wrap{max-width:900px;margin:0 auto;padding:20px}
    .list{display:grid;gap:10px;margin-top:12px}
    .item{border:1px solid #e5e7eb;border-radius:12px;padding:12px;background:#fff}
    .muted{color:#6b7280}
    .pill{display:inline-block;padding:2px 8px;border-radius:999px;border:1px solid #e5e7eb;font-size:12px;margin-top:6px}
  </style>
</head>
<body>
  <main class="wrap">
    <h2>Hola, <%= clientName %></h2>
    <div class="list">
      <% if (appts.length === 0) { %>
        <div class="muted">No tienes citas próximas.</div>
      <% } %>
      <% appts.forEach(a => { %>
        <div class="item">
          <div><strong><%= a.services?.name || 'Servicio' %></strong> con <%= a.employees?.name || 'equipo' %></div>
          <div class="muted"><%= new Date(a.start_at).toLocaleString() %> — <%= new Date(a.end_at).toLocaleTimeString([], {hour:'2-digit',minute:'2-digit'}) %></div>
          <div class="pill"><%= a.status %></div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>
